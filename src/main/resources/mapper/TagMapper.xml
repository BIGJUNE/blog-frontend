<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.frontend.module.tag.dao.ITagDao">

    <select id="listTagName" resultType="string">
        SELECT distinct t.tag_name FROM tag t
        <where>
            <if test="paperId != null ">
                t.paper_id = #{paperId};
            </if>
            <if test="tagName != null and !tagName.isEmpty()">
                instr(t.tag_name, #{tagName}) > 0
            </if>
        </where>
    </select>

    <select id="listTagsByPaperIdList" resultType="TagPO" parameterType="java.util.List">
        SELECT t.id, t.paper_id, t.tag_name
        FROM tag t
        <where>
            t.paper_id IN
            <foreach collection="list" index="index" item="item" open="(" separator="," close=")" >
                #{item}
            </foreach>
        </where>
    </select>

    <insert id="createTag">
        INSERT INTO tag(paper_id, tag_name) VALUES (#{paperId}, #{tangName})
        <foreach collection="tagList" index="index" item="item" separator=",">
            (#{item.paperId}, #{item.tangName})
        </foreach>
    </insert>

    <delete id="deleteTagByPaperId">
        DELETE FROM tag t WHERE t.paperId = #{paperId}
    </delete>
</mapper>